{
  "manifest_version": 3,
  "name": "1.1.1.1 DNS Helper",
  "version": "1.0",
  "description": "Enforces Cloudflare's 1.1.1.1 DNS for enhanced privacy and speed.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "1.1.1.1 DNS Helper",
    "default_popup": "popup/popup.html"
  }
}